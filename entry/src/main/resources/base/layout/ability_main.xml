    <TableLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:left_margin="32vp"
        ohos:right_margin="32vp"
        ohos:column_count="5"
        ohos:row_count="5"
        >
        <Button
            ohos:id="$+id:btn_back"
            ohos:text="《-"
            ohos:focus_border_width="2vp"
            ohos:width="55vp"
            ohos:height="50vp"
            ohos:text_size="16vp"/>
        <Button
            ohos:id="$+id:btn_CE"
            ohos:width="55vp"
            ohos:height="50vp"
            ohos:text="CE"
            ohos:text_size="16vp"/>
        <Button
            ohos:id="$+id:btn_C"
            ohos:width="55vp"
            ohos:height="50vp"
            ohos:text="C"
            ohos:text_size="16vp"/>
        <Button
            ohos:id="$+id:btn_PM"
            ohos:width="55vp"
            ohos:height="50vp"
            ohos:text="+-"
            ohos:text_size="16vp"/>
        <Button
            ohos:id="$+id:btn_SQ"
            ohos:width="55vp"
            ohos:height="50vp"
            ohos:text="("
            ohos:text_size="16vp"/>


        <Button
            ohos:id="$+id:btn_7"
            ohos:text="7"
            ohos:focus_border_radius="$ohos:float:button_radius"
            ohos:focus_border_width="2vp"
            ohos:width="55vp"
            ohos:height="50vp"
            ohos:text_size="16vp"/>
        <Button
            ohos:id="$+id:btn_8"
            ohos:width="55vp"
            ohos:height="50vp"
            ohos:text="8"
            ohos:text_size="16vp"/>
        <Button
            ohos:id="$+id:btn_9"
            ohos:width="55vp"
            ohos:height="50vp"
            ohos:text="9"
            ohos:text_size="16vp"/>
        <Button
            ohos:id="$+id:btn_div"
            ohos:width="55vp"
            ohos:height="50vp"
            ohos:text="/"
            ohos:text_size="16vp"/>
        <Button
            ohos:id="$+id:btn_per"
            ohos:width="55vp"
            ohos:height="50vp"
            ohos:text="%"
            ohos:text_size="16vp"/>



        <Button
            ohos:id="$+id:btn_4"
            ohos:text="4"
            ohos:focus_border_radius="$ohos:float:button_radius"
            ohos:focus_border_width="2vp"
            ohos:width="55vp"
            ohos:height="50vp"
            ohos:text_size="16vp"/>
        <Button
            ohos:id="$+id:btn_5"
            ohos:width="55vp"
            ohos:height="50vp"
            ohos:text="5"
            ohos:text_size="16vp"/>
        <Button
            ohos:id="$+id:btn_6"
            ohos:width="55vp"
            ohos:height="50vp"
            ohos:text="6"
            ohos:text_size="16vp"/>
        <Button
            ohos:id="$+id:btn_mul"
            ohos:width="55vp"
            ohos:height="50vp"
            ohos:text="*"
            ohos:text_size="16vp"/>
        <Button
            ohos:id="$+id:btn_add"
            ohos:width="55vp"
            ohos:height="50vp"
            ohos:text="+"
            ohos:text_size="16vp"/>


        <Button
            ohos:id="$+id:btn_1"
            ohos:text="1"
            ohos:focus_border_radius="$ohos:float:button_radius"
            ohos:focus_border_width="2vp"
            ohos:width="55vp"
            ohos:height="50vp"
            ohos:text_size="16vp"/>
        <Button
            ohos:id="$+id:btn_2"
            ohos:width="55vp"
            ohos:height="50vp"
            ohos:text="2"
            ohos:text_size="16vp"/>
        <Button
            ohos:id="$+id:btn_3"
            ohos:width="55vp"
            ohos:height="50vp"
            ohos:text="3"
            ohos:text_size="16vp"/>
        <Button
            ohos:id="$+id:btn_take"
            ohos:width="55vp"
            ohos:height="50vp"
            ohos:text="-"
            ohos:text_size="16vp"/>
        <Button
            ohos:id="$+id:btn_equals"
            ohos:width="55vp"
            ohos:height="50vp"
            ohos:text=" = "
            ohos:text_size="16vp"/>


        <Button
            ohos:id="$+id:btn_0"
            ohos:text="0"
            ohos:focus_border_radius="$ohos:float:button_radius"
            ohos:focus_border_width="2vp"
            ohos:width="55vp"
            ohos:height="50vp"
            ohos:text_size="16vp"/>
        <Button
            ohos:id="$+id:btn_dot"
            ohos:width="55vp"
            ohos:height="50vp"
            ohos:text="."
            ohos:text_size="16vp"/>


    </TableLayout>



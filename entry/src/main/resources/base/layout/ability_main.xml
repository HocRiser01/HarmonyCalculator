<!-- DirectionalLayout  以***Layout结尾的标签都是 布局标签 -->
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="top"
    ohos:orientation="vertical">
    <Text
        ohos:id="$+id:txt_screen"
        ohos:width="match_parent"
        ohos:height="50vp"
        ohos:text_alignment="right"
        ohos:text="0"
        ohos:text_size="32vp"
        ohos:right_margin="32vp"
        ohos:right_padding="12vp"
        ohos:left_margin="32vp"
        ohos:top_margin="32vp"
        ohos:background_element="$media:gray"
        />


